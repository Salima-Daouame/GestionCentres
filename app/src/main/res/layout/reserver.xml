<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReserverCenter"
    android:padding="20dp"
    android:background="@drawable/back8"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="Reserver"
        android:inputType="text"
        android:gravity="center"
        android:fontFamily="@font/baloo"
        android:elegantTextHeight="true"
        android:id="@+id/reservation"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/name_Ass"
        android:textColorHint="#CCC4C2"
        android:padding="13dp"
        android:hint="Name"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/email_Ass"
        android:textColorHint="#CCC4C2"
        android:padding="13dp"
        android:hint="E-mail"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/date_debut"
        android:textColorHint="#CCC4C2"
        android:padding="13dp"
        android:hint="JJ/MM/AAAA"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/date_fin"
        android:textColorHint="#CCC4C2"
        android:padding="13dp"
        android:hint="JJ/MM/AAAA"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:id="@+id/heure_debut"
        android:textColorHint="#CCC4C2"
        android:padding="13dp"
        android:hint="HH:MM"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:id="@+id/heure_fin"
        android:textColorHint="#CCC4C2"
        android:padding="13dp"
        android:hint="HH:MM"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:id="@+id/description_Ass"
        android:textColorHint="#CCC4C2"
        android:padding="13dp"
        android:hint="Ecrire description ..."
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"
        android:scrollbars="horizontal"
        android:maxLines="6"/>

        <androidx.appcompat.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Valider"
        android:fontFamily="@font/baloo"
        android:id="@+id/btnRe"
        android:textAllCaps="false"
        android:background="@drawable/border">
        </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>

</ScrollView>