<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReserverCenter"
    android:padding="10dp"
    android:background="@drawable/back8"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:inputType="text"
            android:text="Reserver"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/name_Ass"
        android:textColorHint="#CCC4C2"
        android:padding="10dp"
            android:inputType="text"
        android:hint="Name"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:id="@+id/email_Ass"
        android:inputType="textEmailAddress"
        android:textColorHint="#CCC4C2"
        android:padding="10dp"
        android:hint="E-mail"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/date_debut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="20dp"
            android:hint="JJ/MM/AAAA"
            android:inputType="date"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#CCC4C2" />

        <EditText
            android:id="@+id/date_fin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="20dp"
            android:hint="JJ/MM/AAAA"
            android:inputType="date"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#CCC4C2" />

        <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:id="@+id/heure_debut"
        android:textColorHint="#CCC4C2"
        android:padding="10dp"
        android:hint="HH:MM"
        android:inputType="time"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:id="@+id/heure_fin"
        android:textColorHint="#CCC4C2"
        android:padding="10dp"
        android:inputType="time"
        android:hint="HH:MM"
        android:drawablePadding="20dp"
        android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/description_Ass"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="20dp"
            android:gravity="top"
            android:hint="Ecrire description ..."
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:padding="5dp"
            android:scrollbars="horizontal"
            android:textColor="@color/black"
            android:textColorHint="#CCC4C2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:fontFamily="@font/baloo"
            android:text="Valider"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</ScrollView>